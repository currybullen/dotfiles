[include]
	path = ~/.gitconfig_private
[pull]
	rebase = true
[rebase]
	autoStash = true
[init]
	defaultBranch = main
[alias]
	ad = add
	br = branch
	ca = commit --amend
	ci = commit
	cn = commit --amend --no-edit
	co = checkout
	di = diff --color=always
	lo = log
	pl = pull
	ps = push
	re = restore
	rs = restore --staged
	sa = stash
	sh = show
	sp = stash pop --index
	st = status
